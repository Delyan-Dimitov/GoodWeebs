@model GoodWeebs.Web.ViewModels.UserViewModels.FriendRequestListViewModel 

<h1 class="display-4">Friend requests</h1>
<hr />
@if (Model.FriendRequests == null)
{
    <h1>No Friend Requests</h1>
}
else
{
    <div class="row">

        <div class="col-md-3"></div>
        <div class="col-md-6">
            <table class="table table-striped table-dark table-hover">
                @foreach (var item in Model.FriendRequests)
                {
                    <tr>
                        <td>
                            <a asp-action="Profile" asp-route-id="@item.Sender.Id" class="text-decoration-none text-white"> <p class="lead"> @item.Sender.DisplayName </p></a>
                        </td>
                        <td class="text-right">
                            <a asp-action="AddFriend" asp-route-id="@item.Sender.Id">
                                <button type="button" class="btn btn-warning btn" asp-action="AddFriend" asp-route-id="@item.Sender.Id">Approve</button>
                            </a>
                            <a asp-action="RejectFriendRequest" asp-route-id="@item.Id">
                                <button type="button" class="btn btn-danger btn">Reject</button>
                            </a>
                        </td>
                    </tr>
                }


            </table>
        </div>
        <div class="col-md-3"></div>
    </div>
}
