@model GoodWeebs.Web.ViewModels.UserViewModels.FriendsListViewModel

@if (Model == null | Model.Friends.Count() == null )
{
<div class="row">
    <div class="col-md-3"></div>
    <h1>No Friends :(</h1>
    <div class="col-md-3"></div>
</div>  

}
else
{
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <table class="table table-striped table-dark table-hover">
            @foreach (var friend in Model.Friends)
            {
                <tr>
                    <td>
                        <a asp-action="Profile" asp-route-id="@friend.Id" class="text-white text-decoration-none">
                            <p class="lead"> @friend.DisplayName </p>
                        </a>
                    </td>
                    <td class="text-right">
                        <button type="button" class="btn btn-danger btn-sm" asp-action="RemoveFriend" asp-route-id="@friend.Id">Remove Friend</button>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-3"></div>
</div>
}
