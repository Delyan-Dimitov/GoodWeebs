@model GoodWeebs.Web.ViewModels.GroupViewModel.PostViewModel
@using System.Web;

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-5">
        <h1>@Model.Title</h1>

        <div>@Html.Raw(Model.Content)</div>
    </div>
    <hr />
</div>
<hr />
<h1>Comments:</h1>
    @if (Model.Comments.Count() > 0)
    {

        @foreach (var comment in Model.Comments)
        {
            <div class="row">

                <div class="col-md-3"></div>
                <div><p class="text-lg">@comment.CommenterDisplayName:  </p></div>
                @Html.Raw(comment.Content)
                <div class="col-md-3"></div>
            </div>
            <hr />
        }
    }

<a asp-action="Comment" asp-route-id="@Model.Id" class="btn-dark btn-lg text-white text-decoration-none">Comment</a>
<div class="col-md-3"></div>
