@model GoodWeebs.Web.ViewModels.ShelfViewModels.ShelfViewModel


@if (Model.ShelfItems == null)
{
    <h1>Empty</h1>

}
else
{
    <div class="row">
        <div class="col-md-2 "></div>
        <div class="col-md-2 border-right border-light">
            <a class="text-dark text-decoration-none lead" asp-action="Watching" asp-route-id=@Model.ProfileId> Watching </a>
            <hr>
            <a class="text-dark text-decoration-none lead" asp-action="WantToWatch" asp-route-id=@Model.ProfileId> Want To Watch </a>
            <hr>
            <a class="text-dark text-decoration-none lead" asp-controller="Users" asp-action="Profile" asp-route-id=@Model.ProfileId> Profile </a>
        </div>
        <div class="col-md-6">

            <table class="table table-dark table-striped table-hover">
                <tbody>
                <thead class="thead-dark">
                </thead>
                
                @foreach (var item in Model.ShelfItems)
                {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>
                    <a asp-action="RemoveFromWatched" asp-route-id="@item.Id">
                         <button type="button" class="btn btn-warning" >Remove</button>
                    </a>
                </td>
            </tr>
                }



                </tbody>
            </table>
        </div>
        <div class="col-md-2"></div>
    </div>
}